---
/* 定义组件的属性接口 */
export interface Props {
  title: string;      /* 卡片标题 */
  body: string;       /* 卡片描述文本 */
  href: string;       /* 链接地址 */
}

/* 解构获取传递给组件的属性 */
const { href, title, body } = Astro.props as Props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
