---
/* 导入基础布局组件 */
import Layout from "../layouts/Layout.astro";
---

<Layout title="Astro Interactive">
  <main>
    <!-- 加载时显示的骨架屏 -->
    <div id="loading" class="skeleton-container">
      <!-- 标题骨架 -->
      <div class="skeleton-title"></div>

      <!-- 描述文本骨架 -->
      <div class="skeleton-description">
        <div class="skeleton-line skeleton-line-long"></div>
        <div class="skeleton-line skeleton-line-medium"></div>
        <div class="skeleton-line skeleton-line-short"></div>
      </div>

      <!-- 卡片列表骨架 -->
      <ul class="skeleton-card-grid">
        <li class="skeleton-card">
          <div class="skeleton-card-header"></div>
          <div class="skeleton-card-line"></div>
          <div class="skeleton-card-line skeleton-card-line-short"></div>
        </li>
        <li class="skeleton-card">
          <div class="skeleton-card-header"></div>
          <div class="skeleton-card-line"></div>
          <div class="skeleton-card-line skeleton-card-line-short"></div>
        </li>
        <li class="skeleton-card">
          <div class="skeleton-card-header"></div>
          <div class="skeleton-card-line"></div>
          <div class="skeleton-card-line skeleton-card-line-short"></div>
        </li>
      </ul>
    </div>
    <!-- 实际内容区域（初始隐藏） -->
    <div id="content" style="display: none;">
      <h1>Interactive <span id="title"></span></h1>  <!-- 动态标题 -->
      <p class="instructions" id="description"></p>  <!-- 动态描述 -->
      <ul role="list" class="link-card-grid" id="cards-list"></ul>  <!-- 动态卡片列表 -->
    </div>
  </main>
</Layout>

<script>
  /* 定义卡片数据接口 */
  interface CardData {
    href: string;      /* 卡片链接地址 */
    title: string;     /* 卡片标题 */
    body: string;      /* 卡片描述 */
  }

  /* 定义描述数据接口 */
  interface DescriptionData {
    title: string;     /* 标题文本 */
    titleHtml: string; /* HTML格式的标题 */
    text: string;      /* 描述文本 */
    code: string;      /* 代码信息 */
  }

  /* 异步加载数据函数 - 从API路由获取卡片和描述数据 */
  async function loadData() {
    /* 获取加载和内容元素 */
    const loadingElement = document.getElementById("loading");
    const contentElement = document.getElementById("content");

    try {
      /* 获取卡片数据 */
      const cardsResponse = await fetch("/api/cards");  /* 调用API获取卡片数据 */
      if (!cardsResponse.ok) {
        throw new Error(
          `Failed to fetch cards: ${cardsResponse.status} ${cardsResponse.statusText}`  /* 如果请求失败则抛出错误 */
        );
      }
      const cards: CardData[] = await cardsResponse.json();  /* 解析JSON响应 */

      /* 获取描述数据 */
      const descriptionResponse = await fetch("/api/description");  /* 调用API获取描述数据 */
      if (!descriptionResponse.ok) {
        throw new Error(
          `Failed to fetch description: ${descriptionResponse.status} ${descriptionResponse.statusText}`  /* 如果请求失败则抛出错误 */
        );
      }
      const description: DescriptionData = await descriptionResponse.json();  /* 解析JSON响应 */

      /* 更新页面标题 */
      const titleElement = document.getElementById("title");  /* 获取标题元素 */
      if (titleElement) {
        titleElement.innerHTML = description.titleHtml;  /* 设置HTML格式的标题 */
      }

      /* 更新描述内容 */
      const descriptionElement = document.getElementById("description");  /* 获取描述元素 */
      if (descriptionElement) {
        descriptionElement.innerHTML = `
          ${description.text}<br />
          <strong>API Routes:</strong>
          <span>${description.code}</span>
        `;  /* 设置描述文本和API信息 */
      }

      /* 渲染卡片列表 */
      const cardsList = document.getElementById("cards-list");  /* 获取卡片列表容器 */
      if (cardsList) {
        cardsList.innerHTML = cards  /* 生成卡片HTML */
          .map(
            (card) => `
            <li class="link-card">
              <a href="${card.href}">
                <h2>
                  <span>${card.title}</span>
                  <span>&rarr;</span>
                </h2>
                <p>${card.body}</p>
              </a>
            </li>
          `
          )
          .join("");  /* 将所有卡片连接成一个字符串 */
      }

      /* 隐藏加载动画并显示实际内容 */
      if (loadingElement) {
        loadingElement.style.display = "none";  /* 隐藏骨架屏 */
      }
      if (contentElement) {
        contentElement.style.display = "block";  /* 显示内容 */
      }
    } catch (error) {
      console.error("Error loading data:", error);  /* 在控制台记录错误 */
      /* 出错时隐藏加载动画 */
      if (loadingElement) {
        loadingElement.style.display = "none";  /* 隐藏骨架屏 */
      }
      const main = document.querySelector("main");  /* 获取主内容区域 */
      if (main) {
        main.innerHTML = `  /* 显示错误信息 */
          <h1>Error</h1>
          <p>Failed to load data. Please refresh the page.</p>
        `;
      }
    }
  }

  /* 页面加载完成后开始获取数据 */
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", loadData);  /* 如果页面仍在加载中，则等待DOM加载完成后再执行 */
  } else {
    loadData();  /* 如果页面已经加载完成，则立即执行 */
  }
</script>

<style>
  :root {
    --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
  }

  h1 {
    margin: 2rem 0;
    text-align: center;
  }

  main {
    margin: auto;
    padding: 1em;
    max-width: calc(60ch + 80px);
  }

  /* Skeleton Screen Styles */
  .skeleton-container {
    animation: skeleton-fade-in 0.3s ease-in;
  }

  @keyframes skeleton-fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .skeleton-title {
    height: 2.5rem;
    width: 60%;
    max-width: 300px;
    margin: 2rem auto;
    background: linear-gradient(
      90deg,
      rgba(var(--accent-light), 0.1) 25%,
      rgba(var(--accent-light), 0.2) 50%,
      rgba(var(--accent-light), 0.1) 75%
    );
    background-size: 200% 100%;
    border-radius: 0.5rem;
    animation: skeleton-shimmer 1.5s ease-in-out infinite;
  }

  .skeleton-description {
    margin: 1rem 0;
    padding: 1.5rem;
    border: 1px solid rgba(var(--accent-light), 15%);
    background: linear-gradient(
      rgba(var(--accent-dark), 40%),
      rgba(var(--accent-dark), 25%)
    );
    border-radius: 0.5rem;
  }

  .skeleton-line {
    height: 1rem;
    background: linear-gradient(
      90deg,
      rgba(var(--accent-light), 0.08) 25%,
      rgba(var(--accent-light), 0.15) 50%,
      rgba(var(--accent-light), 0.08) 75%
    );
    background-size: 200% 100%;
    border-radius: 0.25rem;
    margin-bottom: 0.75rem;
    animation: skeleton-shimmer 1.5s ease-in-out infinite;
  }

  .skeleton-line-long {
    width: 100%;
  }

  .skeleton-line-medium {
    width: 75%;
  }

  .skeleton-line-short {
    width: 50%;
    margin-bottom: 0;
  }

  .skeleton-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
    list-style: none;
  }

  .skeleton-card {
    padding: 0.08rem;
    background: rgba(var(--accent-light), 0.1);
    border-radius: 0.5rem;
    animation: skeleton-shimmer 1.5s ease-in-out infinite;
  }

  .skeleton-card > div {
    margin: 0;
    padding: 0;
    border-radius: 0.35rem;
    background: rgba(0, 0, 0, 0.3);
  }

  .skeleton-card-header {
    height: 1.5rem;
    width: 70%;
    margin: 1em 1.3em 0.75rem 1.3em !important;
    background: linear-gradient(
      90deg,
      rgba(var(--accent-light), 0.1) 25%,
      rgba(var(--accent-light), 0.2) 50%,
      rgba(var(--accent-light), 0.1) 75%
    );
    background-size: 200% 100%;
    animation: skeleton-shimmer 1.5s ease-in-out infinite;
  }

  .skeleton-card-line {
    height: 0.875rem;
    width: 90%;
    margin: 0.5rem 1.3em !important;
    background: linear-gradient(
      90deg,
      rgba(var(--accent-light), 0.08) 25%,
      rgba(var(--accent-light), 0.15) 50%,
      rgba(var(--accent-light), 0.08) 75%
    );
    background-size: 200% 100%;
    animation: skeleton-shimmer 1.5s ease-in-out infinite;
  }

  .skeleton-card-line-short {
    width: 60%;
    margin-bottom: 1em !important;
  }

  @keyframes skeleton-shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--astro-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      background-position-y: 0%;
    }
    50% {
      background-position-y: 80%;
    }
  }

  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 0.5rem;
    color: var(--color-text);
  }

  .instructions code {
    font-size: 0.8em;
    font-weight: 700;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }

  .instructions strong {
    color: rgb(var(--accent-light));
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }

  :global(.link-card) {
    --link-gradient: linear-gradient(
      45deg,
      #4f39fa,
      #da62c4 30%,
      var(--color-border) 60%
    );
    list-style: none;
    display: flex;
    padding: 0.08rem;
    background-color: rgba(255, 255, 255, 0.15);
    background-image: var(--link-gradient);
    background-size: 400%;
    border-radius: 0.5rem;
    background-position: 100%;
    transition:
      background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1),
      background-color 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  :global(.link-card > a) {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1em 1.3em;
    border-radius: 0.35rem;
    color: var(--color-text);
    background-color: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.25);
  }

  :global(.link-card h2) {
    margin: 0;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  :global(.link-card p) {
    margin-top: 0.75rem;
    margin-bottom: 0;
  }

  :global(.link-card h2 span) {
    display: inline-block;
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  :global(.link-card:is(:hover, :focus-within)) {
    background-position: 0;
    background-color: rgba(255, 255, 255, 0.2);
  }

  :global(.link-card:is(:hover, :focus-within) h2) {
    color: #4f39fa;
  }

  :global(.link-card:is(:hover, :focus-within) h2 span) {
    will-change: transform;
    transform: translateX(2px);
  }
</style>
