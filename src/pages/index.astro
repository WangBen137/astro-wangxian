---
/* 导入布局组件 */
import Layout from "../layouts/Layout.astro";

/* 获取服务器端渲染时间 */
const renderTime = new Date();
const formattedTime = renderTime.toLocaleString("en-US", {
  year: "numeric",        /* 年份 */
  month: "2-digit",       /* 两位数月份 */
  day: "2-digit",         /* 两位数日期 */
  hour: "2-digit",        /* 两位数小时 */
  minute: "2-digit",      /* 两位数分钟 */
  second: "2-digit",      /* 两位数秒 */
  hour12: false,          /* 使用24小时制 */
});
---

<Layout title="Welcome to Astro.">
  <main>
    <!-- 主标题，包含渐变效果 -->
    <h1>Welcome to <span class="text-gradient">Astro</span></h1>
    <!-- 页面说明和服务器渲染时间 -->
    <p class="instructions">
      Check out the <code>src/pages</code> directory to get started.<br />
      <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.<br
      />
      <strong>Server Render Time:</strong>  <!-- 显示服务器端渲染时间 -->
      <span class="render-time">{formattedTime}</span>
    </p>
  </main>
</Layout>

<style>
  :root {
    --astro-gradient: linear-gradient(135deg, #4f39fa, #da62c4, #6a11cb);
    --shadow-smooth: 0 8px 32px rgba(31, 38, 135, 0.37);
    --border-radius: 16px;
  }

  h1 {
    margin: 2.5rem 0 1.5rem;
    text-align: center;
    font-size: clamp(2.5rem, 5vw, 4rem);
    letter-spacing: -0.02em;
  }

  main {
    margin: auto;
    padding: 1.5rem;
    max-width: calc(60ch + 120px);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--astro-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
    animation: gradientShift 6s ease infinite;
    display: inline-block;
  }

  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .instructions {
    line-height: 1.6;
    margin: 1.5rem 0;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.8rem;
    border-radius: var(--border-radius);
    color: var(--color-text);
    box-shadow: var(--shadow-smooth);
    backdrop-filter: blur(4px);
    max-width: 60ch;
  }

  .instructions code {
    font-size: 0.85em;
    font-weight: 700;
    background: rgba(var(--accent-light), 15%);
    color: rgb(var(--accent-light));
    border-radius: 6px;
    padding: 0.35em 0.5em;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .instructions strong {
    color: rgb(var(--accent-light));
  }

  .render-time {
    color: rgb(var(--accent-light));
    font-family: Menlo, Monaco, "Courier New", monospace;
    font-size: 0.95em;
    font-weight: 600;
  }
</style>
